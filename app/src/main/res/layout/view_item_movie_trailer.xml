<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/movie_trailer_item_width"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="end"
            android:padding="@dimen/margin_small"
            android:text="@string/trailer_title"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_movie_back_placeholder" />

            <ImageView
                android:layout_width="@dimen/play_icon_size"
                android:layout_height="@dimen/play_icon_size"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play_circle_outline_white_24dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="start"
            android:padding="@dimen/margin_small"
            android:text="@string/trailer_type"
            android:textColor="@color/white" />
    </LinearLayout>


</android.support.v7.widget.CardView>